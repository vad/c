# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5

    # gruvbox colors
    # aqua
    color_good     = "#8ec07c"
    # red
    color_bad      = "#fb4934"
    # yellow
    color_degraded = "#fabd2f"
}

order += "backlight"
order += "volume master"
order += "memory"
order += "loadavg"
order += "lm_sensors"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery_level"
# order += "battery all"
order += "tztime local"

backlight {
    brightness_delta = "10"
    command = "brightnessctl"
}

volume master {
	format = "‚ô™ %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0

    on_click 1 = "exec pavucontrol"
	# termsyn font
	#format = "√Ä %volume "
}

wireless _first_ {
    format_up = "Ôá´  %essid%quality [%frequency]"
    format_down = "Ôá´ "
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "Û∞àÄ %speed"
    format_down = "Û∞àÄ "

}

