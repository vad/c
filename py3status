# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "backlight"
order += "volume master"
order += "memory"
order += "load"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

backlight {}

volume master {
	format = "â™ª %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0

    on_click 1 = "exec pavucontrol"
	# termsyn font
	#format = "Ã€ %volume "
}

wireless _first_ {
    format_up = "ï‡« %essid%quality [%frequency]"
    format_down = "ï‡«"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "ï›¿ %ip (%speed)"
    format_down = "ï›¿"
}

battery all {
        format = "%status %percentage"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
        low_threshold = 10
        integer_battery_capacity = true
        last_full_capacity = true
        hide_seconds = true

        on_click 1 = "exec i3-sensible-terminal -e sudo powertop"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

load {
        format = "%1min"

        on_click 1 = "exec i3-sensible-terminal -e htop"
}

disk "/" {
        format = "/ %avail"

        on_click 1 = "exec nautilus"
}

memory {
    format = "Free RAM: %available"
    threshold_degraded = "2G"
    format_degraded = "Free RAM: %available"
}
