battery_level {
    notify_low_level = True
    notification = True
    hide_seconds = True
    threshold_degraded = 10
    threshold_full = 96
    format = "{icon} {power:.0f}W {percent}% {time_remaining}"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

loadavg {
    format = '[\?color=1avg {1min}] '
    format += '[\?color=5avg {5min}] '
    format += '[\?color=15avg {15min}]'
}

lm_sensors {
    format_chip = "Û∞àê {format_sensor}"
    format_sensor = "{input}"
    sensors = ["fan*"]
}

disk "/" {
        format = "üñ¥ %avail"

        on_click 1 = "exec nautilus"
}

memory {
    format = "Û∞çõ %available"
    threshold_degraded = "20G"
    format_degraded = "Free RAM: %available"
}
